  "keywords": [
    "slider",
    "carousel",
    "scroll",
    "scroll-snap"
  ],
  "main": "dist/scroll-snap-slider.umd.cjs",
  "style": "dist/scroll-snap-slider.css",
  "module": "dist/scroll-snap-slider.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "type": "module",
