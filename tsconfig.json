{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": false,
    "removeComments": true,
    "rootDir": "src",
    "outDir": "dist",
    "target": "ESNext",
    "declaration": true,
    "moduleResolution": "Node",
    "types": [],
    "paths": {
      "@/*": ["./src/*"],
      "scroll-snap-slider": ["./src/lib/index.ts", "./src/lib/*"],
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "typedocOptions": {
    "entryPoints": [
      "src"
    ],
    "exclude": [
      "node_modules"
    ],
    "entryPointStrategy": "expand",
    "out": "demo/docs",
    "githubPages": true,
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
